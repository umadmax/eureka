{{#if error}}
<div class="alert alert-danger alert-dismissible">
  <button class="close" data-dismiss="alert">&times;</button>
    {{error}}
  </div>
{{/if}}

{{#each errors}}
<div class="alert alert-danger alert-dismissible">
  <button class="close" data-dismiss="alert">&times;</button>
    {{text}}
  </div>
{{else}}

{{/each}}
