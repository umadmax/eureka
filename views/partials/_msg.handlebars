{{#if success_msg}}
  <div class="alert alert-success alert-dismissible">
    <button class="close" data-dismiss="alert">&times;</button>
    {{success_msg}}
  </div>
{{/if}}

{{#if error_msg}}
  <div class="alert alert-danger alert-dismissible">
    <button class="close" data-dismiss="alert">&times;</button>
    {{error_msg}}
  </div>
{{/if}}
